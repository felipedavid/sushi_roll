{{define "title"}}
    Login | Sushi Roll
{{end}}

{{define "main"}}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
        background-color: #e6e6e6;
        }
        
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f1f2;
        }

        .login {
            width: 360px;
            height: min-content;
            padding: 20px;
            border-radius: 12px;
            background-image: linear-gradient(-35deg, #9999ff, #88f4ff);
        }

        .login h1 {
            font-size: 36px;
            margin-bottom: 25px;
        }

        .login form {
            font-size: 20px;
        }

        .login form .form-group {
            margin-bottom: 12px;
        }

        .login form input[type="submit"] {
            font-size: 20px;
            margin-top: 15px;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <div class="login">

        <h1 class="text-center text-white">Olá Usuário!</h1>
        
        <form class="needs-validation" method="POST" action="/user/login">
            <div class="form-group was-validated">
                <label class="form-label text-white" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email" value="{{.Form.Email}}" required>
                {{with .Form.FieldErrors.email}}
                <div class="invalid-feedback">
                    {{.}}
                </div>
                {{end}}
            </div>
            <div class="form-group was-validated">
                <label class="form-label text-white" for="password">Senha</label>
                <input class="form-control" type="password" id="password" name="password" required>
                {{with .Form.FieldErrors.password}}
                <div class="invalid-feedback">
                    {{.}}
                </div>
                {{end}}
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" id="check">
                <label class="form-check-label text-white" for="check">Remember me</label>
            </div>
            <div>
                <a href="/user/signup" class="text-white">criar minha conta</a>
            </div>
            <input class="btn btn-outline-light w-100" type="submit" value="ENTRAR"><br>
        </form>

    </div>
{{end}}